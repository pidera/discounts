{
    "name": "pidera/discounts",
    "description": "Discount application",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "league/flysystem": "^3.12",
        "money/money": "^2.0",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.3",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
